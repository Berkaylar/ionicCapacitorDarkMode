{
  "name": "capacitor-dark-mode",
  "version": "2.0.0",
  "description": "Handle Dark mode changes on android and iOS",
  "type": "module",
  "main": "dist/plugin.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "lint": "npm run prettier -- --check && npm run swiftlint -- lint",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\" --plugin=prettier-plugin-java",
    "swiftlint": "node-swiftlint",
    "build": "npm run clean && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "author": "Hinddeep Shailesh Purohit",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/android": "^7.0.0",
    "@capacitor/core": "^7.0.0",
    "@capacitor/ios": "^7.0.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^1.1.2",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "prettier": "^3.4.2",
    "prettier-plugin-java": "^2.6.6",
    "rimraf": "^5.0.10",
    "rollup": "^4.24.0",
    "swiftlint": "^1.0.2",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "@capacitor/core": "^7.0.0"
  },
  "files": [
    "dist/",
    "ios/",
    "android/",
    "CapacitorDarkMode.podspec"
  ],
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/hinddeep/ionicCapacitorDarkMode"
  },
  "bugs": {
    "url": "https://github.com/hinddeep/ionicCapacitorDarkMode/issues"
  },
  "dependencies": {
    "@capacitor/cli": "^7.0.0"
  }
}
